<%- include('../templates/auth-header') %>

<div class="container" id="auth-container">
   
   <div class="d-flex justify-content-between align-items-center gap-5" style="height: 100vh">
      <div class="right-panel">
         <h3>Admin Login</h3>
         <form action="" method="POST">
            <div class="form-group mb-3"><input class="form-control" type="text" name="username" id="username" autocomplete="off"/><label class="mb-1">Username</label></div>
            <div class="form-group mb-3"><input class="form-control" type="password" name="password" id="password" autocomplete="off"/><label class="mb-1">Password</label></div>
            <button class="mt-3 w-100 p-3 btn btn-primary" type="submit">Sign In</button>
            <div class="other mt-3">
               <div class="line d-flex align-items-center"><span>or</span></div>
               <a class="btn btn-outline-primary w-100 p-3 mt-3" href="/">Home</a>
            </div>
         </form>
      </div>
   </div>
</div>

